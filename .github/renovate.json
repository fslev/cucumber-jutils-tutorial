{
  "extends": [
    "config:base"
  ],
  "timezone": "Europe/Bucharest",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "schedule": [
        "after 1pm every weekday"
      ]
    }
  ]
}
